<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/viewverh"
            android:background="#448aff"></View>

        <com.github.aakira.expandablelayout.ExpandableWeightLayout
            android:id="@+id/expandableLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:background="#cfd8dc"
            android:padding="4dp"
            android:gravity="center"
            app:ael_expanded="false"
            app:ael_duration="1500"
            app:ael_interpolator="anticipateOvershoot">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/locationtext" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="4dp"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:id="@+id/cv">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/imgCalendar1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/back_frame" />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp" >

                            <RatingBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/ratingBar1"
                                android:numStars="7"
                                android:rating="2"
                                android:stepSize="0.5"
                                style="@style/CustomRatingBar"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/text_id_day1"
                                android:gravity="center"
                                android:textSize="15dp"
                                android:layout_below="@id/ratingBar1"
                                android:layout_centerHorizontal="true" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:id="@+id/linearlayout"
                                android:layout_below="@id/text_id_day1"
                                android:layout_centerHorizontal="true">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/image_day1"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/temp1_day1"
                                    android:textColor="#ffca28"
                                    android:textSize="20dp"
                                    android:gravity="center" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/wind_day1"
                                    android:layout_marginLeft="8dp"
                                    android:textSize="17dp"
                                    android:textColor="#2962ff"
                                    android:gravity="center" />

                            </LinearLayout>



                        </RelativeLayout>

                    </LinearLayout>




                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="4dp"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:gravity="center"
                    android:id="@+id/cv2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/imgCalendar2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/back_frame" />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp" >

                            <RatingBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/ratingBar2"
                                android:numStars="7"
                                android:rating="2"
                                android:stepSize="0.5"
                                style="@style/CustomRatingBar"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="test"
                                android:id="@+id/text_id_day2"
                                android:gravity="center"
                                android:textSize="15dp"
                                android:layout_below="@id/ratingBar2"
                                android:layout_centerHorizontal="true" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:id="@+id/linearlayout2"
                                android:layout_below="@id/text_id_day2"
                                android:layout_alignParentLeft="true">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/test"
                                    android:id="@+id/image_day2"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/temp1_day2"
                                    android:text="max "
                                    android:textSize="22dp"
                                    android:gravity="center" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/temp2_day2"
                                    android:text="C"
                                    android:textSize="22dp"
                                    android:gravity="center" />

                            </LinearLayout>



                        </RelativeLayout>

                    </LinearLayout>




                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="4dp"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:gravity="center"
                    android:id="@+id/cv3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/imgCalendar3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/back_frame" />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp" >

                            <RatingBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/ratingBar3"
                                android:numStars="7"
                                android:rating="2"
                                android:stepSize="0.5"
                                style="@style/CustomRatingBar"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="test"
                                android:id="@+id/text_id_day3"
                                android:gravity="center"
                                android:textSize="15dp"
                                android:layout_below="@id/ratingBar3"
                                android:layout_centerHorizontal="true" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:id="@+id/linearlayout3"
                                android:layout_below="@id/text_id_day3"
                                android:layout_alignParentLeft="true">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/test"
                                    android:id="@+id/image_day3"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/temp1_day3"
                                    android:text="max "
                                    android:textSize="22dp"
                                    android:gravity="center" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/temp2_day3"
                                    android:text="C"
                                    android:textSize="22dp"
                                    android:gravity="center" />

                            </LinearLayout>



                        </RelativeLayout>

                    </LinearLayout>




                </android.support.v7.widget.CardView>


            </LinearLayout>


        </com.github.aakira.expandablelayout.ExpandableWeightLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#2962ff"></View>
    </LinearLayout>
</LinearLayout>
